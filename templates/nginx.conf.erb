user  <%= @user %>;
worker_processes  <%= @w_processes %>;

error_log  <%= @error_log %> <%= @error_type %>;
pid        /var/run/nginx.pid;


events {
    worker_connections  <%= @w_conns %>;
}


http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile <%= @sendfile %>;
    log_subrequest <%= @l_subrequest %>;
    tcp_nopush <%= @tcp_nopush %>;
    tcp_nodelay <%= @tcp_nodelay %>;
    etag <%= @etag %>;
    keepalive_timeout <%= @kl_timeout %>;
    types_hash_max_size <%= @types_hash_max_size %>;
    resolver <%= @resolver %>;
    gzip <%= @gzip %>;
    gzip_comp_level 6;
    gzip_min_length 100;
    gzip_http_version 1.1;
    gzip_vary on;
    gzip_proxied any;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript image/svg+xml application/x-font-ttf font/opentype image/jpeg image/png;
    gzip_static always;
    gzip_buffers 16 8k;
    gzip_disable “MSIE [1-6].(?!.*SV1)”;
    server_tokens <%= @server_tokens %>;
    fastcgi_read_timeout <%= @fastcgi_read_timeout %>;
    include <%= @cf_ips %>;

    include /etc/nginx/conf.d/*.conf;
	server_names_hash_bucket_size 128;
}
